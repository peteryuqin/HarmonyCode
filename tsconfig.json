{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "core/**/*.ts",
    "diversity/**/*.ts",
    "orchestration/**/*.ts",
    "cli/**/*.js",
    "examples/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}